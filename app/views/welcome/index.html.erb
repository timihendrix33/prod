<div class="row">
	<h4>Data from our latest report: <%= link_to @latest_report.title, report_path(@latest_report.id) %></h4>
	<ul class="small-block-grid-3">

		<%@latest_report.questions.each do |question| %>
			<li class="card">
				<span><p><%= link_to question.title, question_path(question.id) %></p></span>
				<span><%= question.tag %></span>
				<% question.responses.where(country: "total").each do |response| %>
				<span><%= response.answer_count  %></span>
				<%end%>
			</li>
		<%end%>

	</ul>
</div>
